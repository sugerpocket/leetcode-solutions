{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    
    "jsx": "react",
    "declaration": true,
    "downlevelIteration": true,
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "resolveJsonModule": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
